<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <xacro:property name="scale_factor" value="0.001 0.001 0.001"/>

    <!-- ****************************************************************************************** -->
    <!-- ***************************************** Base ******************************************* -->
    <!-- ****************************************************************************************** -->

    <link name="world">
    </link>

    <link name="bottom_base">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://robotic_arm/meshes/bottom_base.stl" scale="${scale_factor}"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://robotic_arm/meshes/bottom_base.stl" scale="${scale_factor}"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.0225" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>
    </link>

    <link name="top_base">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://robotic_arm/meshes/top_base.stl" scale="${scale_factor}"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://robotic_arm/meshes/top_base.stl" scale="${scale_factor}"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <mass value="0.8"/>
            <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.001"/>
        </inertial>
    </link>

    <joint name="bottom_base_joint" type="fixed">
        <parent link="world"/>
        <child link="bottom_base"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <joint name="base_joint" type="revolute">
        <parent link="bottom_base"/>
        <child link="top_base"/>
        <origin xyz="0 0 0.045" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-${pi}" upper="${pi}" effort="100" velocity="1"/>
    </joint>

    <!-- ****************************************************************************************** -->
    <!-- *************************************** Shoulder ***************************************** -->
    <!-- ****************************************************************************************** -->

    <link name="shoulder">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://robotic_arm/meshes/shoulder.stl" scale="${scale_factor}"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://robotic_arm/meshes/shoulder.stl" scale="${scale_factor}"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0.03615 0 0.20655" rpy="0 0 0"/>
            <mass value="0.6"/>
            <inertia ixx="0.003" ixy="0.0" ixz="0.0" iyy="0.003" iyz="0.0" izz="0.0005"/>
        </inertial>
    </link>

    <joint name="shoulder_joint" type="revolute">
        <parent link="top_base"/>
        <child link="shoulder"/>
        <origin xyz="-0.0655 0.13558 0.1998" rpy="0 0 0"/>
        <axis xyz="-1 0 0"/>
        <limit lower="-${3*pi/4}" upper="${3*pi/4}" effort="100" velocity="1"/>
    </joint>

    <!-- ****************************************************************************************** -->
    <!-- *************************************** Elbow ******************************************** -->
    <!-- ****************************************************************************************** -->

    <link name="elbow">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://robotic_arm/meshes/elbow.stl" scale="${scale_factor}"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://robotic_arm/meshes/elbow.stl" scale="${scale_factor}"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="-0.00475 0.055 0.0556" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.0005"/>
        </inertial>
    </link>

    <joint name="elbow_joint" type="revolute">
        <parent link="shoulder"/>
        <child link="elbow"/>
        <origin xyz="0.0723 0 0.4131" rpy="0 0 0"/>
        <axis xyz="-1 0 0"/>
        <limit lower="-${pi}" upper="${pi}" effort="100" velocity="1"/>
    </joint>

    <!-- ****************************************************************************************** -->
    <!-- *************************************** Wrist ******************************************** -->
    <!-- ****************************************************************************************** -->
    
    <link name="forearm">
        <visual>
            <origin xyz="0 0 0" rpy="-${pi/2} 0 0"/>
            <geometry>
                <mesh filename="package://robotic_arm/meshes/forearm.stl" scale="${scale_factor}"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://robotic_arm/meshes/forearm.stl" scale="${scale_factor}"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0.128 0" rpy="-${pi/2} 0 0"/>
            <mass value="0.4"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.001"/>
        </inertial>
    </link>

    <joint name="forearm_joint" type="revolute">
        <parent link="elbow"/>
        <child link="forearm"/>
        <origin xyz="-0.0095 0.110 0.1112" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="-${pi}" upper="${pi}" effort="100" velocity="1"/>
    </joint>

    <link name="wrist_carrier">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://robotic_arm/meshes/wrist_carrier.stl" scale="${scale_factor}"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://robotic_arm/meshes/wrist_carrier.stl" scale="${scale_factor}"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.01995" rpy="0 0 0"/>
            <mass value="0.2"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <joint name="wrist_carrier_joint" type="revolute">
        <parent link="forearm"/>
        <child link="wrist_carrier"/>
        <origin xyz="0 0.256 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-${3*pi/4}" upper="${3*pi/4}" effort="100" velocity="1"/>
    </joint>

    <link name="wrist_bevel">
        <visual>
            <origin xyz="0 0 0" />
            <geometry>
                <mesh filename="package://robotic_arm/meshes/wrist_bevel.stl" scale="${scale_factor}"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://robotic_arm/meshes/wrist_bevel.stl" scale="${scale_factor}"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <joint name="wrist_bevel_joint" type="revolute">
        <parent link="wrist_carrier"/>
        <child link="wrist_bevel"/>
        <origin xyz="0 0 0.0399" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-${pi}" upper="${pi}" effort="100" velocity="1"/>
    </joint>

    <!-- ****************************************************************************************** -->
    <!-- **************************************** Claw ******************************************** -->
    <!-- ****************************************************************************************** -->

    <link name="claw_base">
        <visual>
            <origin xyz="-0.04 -0.025 0" />
            <geometry>
                <mesh filename="package://robotic_arm/meshes/claw_base.stl" scale="${scale_factor}"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://robotic_arm/meshes/claw_base.stl" scale="${scale_factor}"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0.02" rpy="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <joint name="claw_base_joint" type="fixed">
        <parent link="wrist_bevel"/>
        <child link="claw_base"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

        <link name="right_claw">
        <visual>
            <origin xyz="0 0 -0.015" />
            <geometry>
                <mesh filename="package://robotic_arm/meshes/claw_right.stl" scale="${scale_factor}"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://robotic_arm/meshes/claw_right.stl" scale="${scale_factor}"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 -0.02 0" rpy="0 0 0"/>
            <mass value="0.05"/>
            <inertia ixx="0.00005" ixy="0.0" ixz="0.0" iyy="0.00005" iyz="0.0" izz="0.00005"/>
        </inertial>
    </link>

    <joint name="right_claw_joint" type="prismatic">
        <parent link="claw_base"/>
        <child link="right_claw"/>
        <origin xyz="0 0 0.03" rpy="${pi/2} 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="0" upper="0.03" effort="100" velocity="1"/>
    </joint>

    <link name="left_claw">
        <visual>
            <origin xyz="0 0 -0.015" />
            <geometry>
                <mesh filename="package://robotic_arm/meshes/claw_left.stl" scale="${scale_factor}"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://robotic_arm/meshes/claw_left.stl" scale="${scale_factor}"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0.02 0" rpy="0 0 0"/>
            <mass value="0.05"/>
            <inertia ixx="0.00005" ixy="0.0" ixz="0.0" iyy="0.00005" iyz="0.0" izz="0.00005"/>
        </inertial>
    </link>

    <joint name="left_claw_joint" type="prismatic">
        <parent link="claw_base"/>
        <child link="left_claw"/>
        <origin xyz="0 0 0.03" rpy="${pi/2} 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-0.03" upper="0" effort="100" velocity="1"/>
        <mimic joint="right_claw_joint" multiplier="-1"/>
    </joint>
    
</robot>